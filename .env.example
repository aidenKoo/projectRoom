############
# 작업서 기반 환경 변수
############

# Database (MariaDB)
DATABASE_HOST=mariadb
DATABASE_PORT=3306
DATABASE_USER=projectroom
DATABASE_PASSWORD=projectroom
DATABASE_NAME=projectroom

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_TTL=600

# NestJS
NODE_ENV=development
PORT=3000

# Firebase (for Authentication & Storage)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# Matching Algorithm Weights (v0 규칙 기반)
WEIGHT_COMMON_TAGS=0.25
WEIGHT_VALUES_MATCH=0.20
WEIGHT_TIME_OVERLAP=0.15
WEIGHT_DISTANCE=0.15
WEIGHT_RESPONSIVENESS=0.15
WEIGHT_QUALITY_SCORE=0.10

# Feed Settings
FEED_CANDIDATE_POOL_SIZE=200
FEED_RETURN_SIZE=20
FEED_CACHE_TTL_SECONDS=600

# CORS
CORS_ORIGIN=http://localhost:5000,http://localhost:3000

# Logging
LOG_LEVEL=debug

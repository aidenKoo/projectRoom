{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MatchCandidate",
  "type": "object",
  "properties": {
    "age": { "type": "integer", "minimum": 18, "maximum": 100 },
    "distance_km": { "type": "number", "minimum": 0, "maximum": 200 },
    "interests": { "type": "array", "items": { "type": "string" } },
    "photo_quality": { "type": "number", "minimum": 0, "maximum": 1 },
    "last_active_min": { "type": "integer", "minimum": 0 }
  },
  "required": ["age", "distance_km", "interests", "photo_quality", "last_active_min"]
}